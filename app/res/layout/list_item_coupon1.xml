<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/transparent"/>
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_coupon_oldtop">
        <TextView
            android:id="@+id/tv_price"
            android:textSize="35sp"
            android:textColor="#61000000"
            android:layout_marginTop="16dp"
            android:layout_width="124dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_discount"
            android:textSize="35sp"
            android:textColor="#61000000"
            android:layout_marginTop="16dp"
            android:layout_width="124dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_limit"
            android:textColor="#61000000"
            android:textSize="14sp"
            android:layout_below="@id/tv_price"
            android:layout_width="124dp"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_title"
            android:textColor="#61000000"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="140dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_date"
            android:textSize="11sp"
            android:textColor="#61000000"
            android:layout_marginTop="96dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_coupon_down"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/tv_get"
            android:textSize="14sp"
            android:text="点击领取"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="96dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:src="@mipmap/icon_coupon_used"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_remind"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_describe"
            android:textSize="11sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#61000000"
            android:background="@mipmap/bg_coupon_oldmiddle"
            android:paddingTop="16dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="14dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@mipmap/bg_coupon_oldbottom"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/transparent"/>

</LinearLayout>