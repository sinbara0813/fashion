<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/trans_40_color_white"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="160dp"
        android:gravity="center_horizontal"
        android:background="@mipmap/bg_mpop_pic"
        android:id="@+id/ll_pop"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <TextView
            android:text="玩转无人买手店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black87"
            android:textSize="20sp"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:text="玩转无人买手店"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black60"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/tv_guide"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:text="玩转无人买手店"
            android:layout_width="140dp"
            android:layout_height="34dp"
            android:background="@drawable/sp_round17_black2"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_pop"
        android:src="@mipmap/ic_new_close_g"
        android:layout_width="32dp"
        android:layout_height="32dp"
        />
</RelativeLayout>