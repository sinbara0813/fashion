<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:background="@drawable/sp_round7_white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black3"
            android:textSize="@dimen/medium_text_size3"
            tools:text="该商品为预售商品，11月25日出货，按下单先后顺序发货"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/sp_promotion"
                android:gravity="center"
                android:text="@string/action_cancel"
                android:textColor="@color/color_black60"
                android:textSize="@dimen/medium_text_size1"/>


            <TextView
                android:id="@+id/btn_sure"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@color/color_black87"
                android:gravity="center"
                android:text="@string/label_confirm"
                android:textColor="@color/color_white"
                android:textSize="@dimen/medium_text_size1"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/toggleButton"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/sl_square_on_2_square_off"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_not_notice"
                android:textColor="@color/color_black4"
                android:textSize="@dimen/small_text_size"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>