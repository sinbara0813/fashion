<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/trans_40_color_black"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/color_white"
        android:id="@+id/ll_pop"
        android:orientation="vertical"
        android:layout_width="290dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="30dp"
            android:background="@drawable/sp_round2_bg_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginBottom="30dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="为什么要实名认证"
                />
            <TextView
                android:id="@+id/tv_content"
                android:textColor="@color/color_black60"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/label_certification_rule"
                />
            <TextView
                android:clickable="true"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="我知道了"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                android:background="@color/color_black6"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_know"
                android:layout_width="120dp"
                android:layout_height="34dp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>