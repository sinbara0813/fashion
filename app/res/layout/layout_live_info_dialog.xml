<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/sp_round4_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:contentDescription="@null"
            android:src="@mipmap/ic_member_info_close" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/trans_87_color_black"
                android:maxWidth="150dp"
                android:ellipsize="end"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@null"
                android:src="@mipmap/icon_zhibo_nan" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxWidth="180dp"
            android:gravity="center"
            android:textColor="@color/trans_40_color_black"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="25dp">
                <TextView
                    android:id="@+id/tv_fans"
                    android:layout_width="wrap_content"
                    android:textColor="@color/trans_87_color_black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="粉丝"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/trans_40_color_black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_follow"
                    android:layout_width="wrap_content"
                    android:textColor="@color/trans_87_color_black"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="关注"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/trans_40_color_black"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E5E5E5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_host_focus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_plus_focus"
                android:textColor="@color/trans_50_color_black"
                android:textSize="18sp"
                android:visibility="visible"
                tools:visibility="visible" />

            <View
                android:layout_width="0.5dp"
                android:background="#E5E5E5"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_explore_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_host"
                android:textColor="@color/trans_50_color_black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <com.d2cmall.buyer.widget.RoundedImageView
        android:id="@+id/iv_head"
        android:layout_width="60dp"
        app:is_oval="true"
        app:round_color="@color/color_white"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        app:round_width="2dp"
        android:layout_height="60dp" />

</RelativeLayout>