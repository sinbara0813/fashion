<?xml version="1.0" encoding="utf-8"?>
<com.d2cmall.buyer.widget.RoundLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="256dp"
    android:layout_height="98dp"
    android:layout_centerInParent="true"
    android:background="@color/color_white"
    app:radius="6dp">

    <TextView
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:text="要删除这件衣服吗?"
        android:textColor="@color/trans_87_color_black"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_below="@+id/tv_title"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FF338CE8"
            android:textSize="16sp" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#ffe8e8e8" />
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_red"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ll_bottom"
        android:background="#ffe8e8e8" />


</com.d2cmall.buyer.widget.RoundLayout>