<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="16dp">


        <ImageView
            android:id="@+id/iv_cangku"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/icon_cangku" />

        <TextView
            android:id="@+id/tv_ware_house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_cangku"
            android:layout_toRightOf="@id/iv_cangku"
            android:gravity="center_vertical"
            android:text="杭州保税仓"
            android:textColor="#FF262626"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ware_house_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ware_house"
            android:layout_marginTop="4dp"
            android:text="@string/global_warehouse_notice"
            android:textColor="#FFF21A1A"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/ll_order_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>