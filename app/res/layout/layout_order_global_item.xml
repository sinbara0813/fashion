<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/content_iv"
        android:layout_width="72dp"
        android:layout_height="108dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="108dp"
        android:layout_alignTop="@id/content_iv"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@id/content_iv">

        <TextView
            android:id="@+id/good_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#FF262626"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/good_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/good_info"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_black38"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/good_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/good_size"
            android:layout_alignParentRight="true"
            android:textColor="#FF262626"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#FFF23365"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/good_drop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/good_price"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/good_price"
            android:textColor="@color/color_black60"
            android:textSize="@dimen/small_text_size" />


    </RelativeLayout>

    <TextView
        android:id="@+id/good_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content_iv"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:text="不支持7天无理由退换货"
        android:textColor="@color/color_red"
        android:textSize="11dp"
        android:visibility="gone" />

    <View
        android:id="@+id/view_space"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/content_iv"/>

</RelativeLayout>