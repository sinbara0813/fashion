<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/flash_time_bg_color"
        android:text="孤品限时购"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="15dp"
        android:visibility="gone"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#666666"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv1"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:layout_marginTop="10dp"
        app:layout_goneMarginTop="0dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        android:background="@mipmap/bg_shadow">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            app:layout_constraintTop_toTopOf="@+id/iv"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="12dp"
            android:textColor="@color/trans_87_color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/promotion_tv"
            android:layout_width="31dp"
            android:layout_height="14dp"
            android:gravity="center"
            android:textSize="10dp"
            android:text="满减"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="#999999"/>

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintLeft_toRightOf="@+id/promotion_tv"
            android:textSize="11dp"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            app:layout_goneMarginLeft="12dp"/>

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="@color/color_black4"
            app:layout_constraintBottom_toBottomOf="@+id/iv"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/promotion_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv"
            android:layout_marginLeft="12dp"
            app:layout_constraintBottom_toTopOf="@+id/price_tv"
            android:textSize="18dp"
            android:textColor="@color/flash_time_bg_color"
            android:layout_marginBottom="2dp"
            app:layout_goneMarginBottom="0dp"/>

        <TextView
            android:id="@+id/buy_tv"
            android:layout_width="68dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:background="@drawable/sp_alone_bg"
            android:text="马上抢"
            android:textColor="@color/color_white"
            android:textSize="14dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>