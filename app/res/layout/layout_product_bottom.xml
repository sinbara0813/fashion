<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:visibility="gone">

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@mipmap/pic_shadow_bottom"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_below="@id/shadow"
        android:background="@color/color_white"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/bottom_service_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_goodsdetail_service"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_black60"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_shop_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/bottom_shop_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_goodsdetail_shop"
                />

            <TextView
                android:id="@+id/bottom_shop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_black60"
                android:textSize="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_cart_ll"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/bottom_cart_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_goodsdetail_shoppingcart"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <TextView
                android:id="@+id/bottom_cart_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_black60"
                android:textSize="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bottom_add_cart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:background="@mipmap/button_addshopcart"
            android:text="加入购物车"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/bottom_buy"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_orange"
            android:background="@mipmap/button_buynow"
            android:text="立即购买"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

</RelativeLayout>