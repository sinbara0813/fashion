<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FF242423"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:src="@mipmap/bg_399buy_pagetbg"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:id="@+id/iv_head"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/bg_399buy_listbg"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:id="@+id/iv_bg"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:layout_below="@+id/iv_head"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        tools:src="@mipmap/ic_logo_empty5"
        android:layout_width="124dp"
        android:layout_height="186dp"
        android:id="@+id/iv_product"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_below="@+id/iv_head"
        android:layout_marginRight="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="68dp"
        android:layout_toRightOf="@id/iv_product"
        android:id="@+id/tv_product_name"
        android:textColor="@color/color_white"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="这是商品名称这是商品这是商品名称这是商品这是商品"
        />
    <TextView
        android:layout_below="@+id/tv_product_name"
        android:layout_marginRight="40dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/iv_product"
        android:id="@+id/tv_product_price"
        android:textColor="@color/color_white"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="¥399"
        />
    <Button
        android:id="@+id/btn_buy"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_product_price"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_product"
        android:textColor="@color/color_white"
        android:text="立即购买"
        android:gravity="center"
        android:background="#0c0700"
        android:layout_width="90dp"
        android:layout_height="30dp"
        />
</RelativeLayout>