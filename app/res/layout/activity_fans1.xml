<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:mContext="com.d2cmall.buyer.activity.FansActivity">

    <include layout="@layout/layout_default_title"/>
    <com.d2cmall.buyer.widget.PtrStoreHouseFrameLayout
        android:layout_below="@+id/title_layout"
        android:id="@+id/ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
    >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />
    </com.d2cmall.buyer.widget.PtrStoreHouseFrameLayout>
    <View
        android:id="@+id/dividing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFECEFF5"
    />

    <include layout="@layout/list_empty_view" />
    <include layout="@layout/layout_progressbar" />
</RelativeLayout>
