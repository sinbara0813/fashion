<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/product_rl"
        android:layout_width="match_parent"
        android:background="#FFF6F5FF"
        android:layout_height="108dp">

        <ImageView
            android:id="@+id/iv_product_top"
            android:layout_width="56dp"
            android:layout_height="84dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/iv_product_top"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#DE000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_min_price"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/iv_product_top"
            android:layout_alignBottom="@id/iv_product_top"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="#DE000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_high_price"
            android:layout_toRightOf="@id/tv_min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="8dp"
            android:layout_alignBottom="@id/iv_product_top"
            android:textColor="#61000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_tag"
        android:text="—— 相似商品 ——"
        android:textColor="#DE000000"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:layout_below="@id/product_rl"
        android:layout_width="match_parent"
        android:paddingTop="16dp"
        android:layout_height="wrap_content" />

</RelativeLayout>