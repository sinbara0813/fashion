<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black"
    tools:context="com.d2cmall.buyer.activity.WardrobeItemDetialActivity">
    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <ImageView
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:id="@+id/iv_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src="@mipmap/icon_back_white"
        />
    <TextView
        android:visibility="gone"
        android:textSize="12sp"
        android:gravity="center"
        android:text="@string/action_save"
        android:textColor="#FF262626"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:background="@color/color_white"
        android:id="@+id/tv_save"
        android:src="@mipmap/icon_back_white"
        />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:visibility="gone"
        android:background="@drawable/wardrobe_gradient"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/color_white"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="服饰·上装·夹克"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_price"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="¥ 564左右"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/tv_desc"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="¥ 564左右"
            />
        <com.d2cmall.buyer.widget.AutoNewLineLayout
            android:layout_marginTop="16dp"
            android:id="@+id/anl_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:horizontalSpace="6dp"
            app:vertivalSpace="8dp"
            />
        <LinearLayout
            android:background="@drawable/sp_line"
            android:id="@+id/ll_bottom_colors"
            android:layout_marginTop="16dp"
            android:layout_height="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:src="@mipmap/icon_clothing_share"
                android:id="@+id/iv_share"
                android:layout_height="40dp"
                android:layout_width="40dp"
                />
            <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:src="@mipmap/icon_clothing_similar"
                android:id="@+id/iv_find_like"
                android:layout_height="40dp"
                android:layout_width="40dp"
                />
            <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:src="@mipmap/icon_clothing_editor"
                android:id="@+id/iv_edit"
                android:layout_height="40dp"
                android:layout_width="40dp"
                />
            <View
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
            <ImageView
                android:src="@mipmap/icon_clothing_delete"
                android:id="@+id/iv_delete"
                android:layout_height="40dp"
                android:layout_width="40dp"
                />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_edit"
            android:layout_alignParentBottom="true"
            android:padding="16dp"
            android:background="@drawable/sp_roundtop4_white"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >
            <TextView
                android:textColor="#FF7F7F7F"
                android:textSize="12sp"
                android:text="品类"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:hint="请选择品类"
                    android:id="@+id/tv_type"
                    android:paddingLeft="6dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="#FF111111"
                    android:background="#FFF8F8F8"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
                <ImageView
                    android:padding="10dp"
                    android:src="@mipmap/ic_arrow_up"
                    android:layout_marginRight="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_marginTop="16dp"
                android:textColor="#FF7F7F7F"
                android:textSize="12sp"
                android:text="价位"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:background="#FFF8F8F8"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >
                <TextView
                    android:textSize="14sp"
                    android:textColor="#FF111111"
                    android:text="¥"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <com.d2cmall.buyer.widget.ClearEditText
                    android:hint="请输入价位"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:id="@+id/edit_price"
                    android:paddingLeft="4dp"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="#FF111111"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginTop="16dp"
                android:textColor="#FF7F7F7F"
                android:textSize="12sp"
                android:text="季节"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.d2cmall.buyer.widget.AutoNewLineLayout
                android:layout_marginTop="4dp"
                android:id="@+id/anl_season"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalSpace="6dp"
                app:vertivalSpace="8dp"
                />
            <TextView
                android:layout_marginTop="16dp"
                android:textColor="#FF7F7F7F"
                android:textSize="12sp"
                android:text="场合"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.d2cmall.buyer.widget.AutoNewLineLayout
                android:layout_marginTop="4dp"
                android:id="@+id/anl_occasions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalSpace="6dp"
                app:vertivalSpace="8dp"
                />
            <TextView
                android:layout_marginTop="16dp"
                android:textColor="#FF7F7F7F"
                android:textSize="12sp"
                android:text="标签"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.d2cmall.buyer.widget.AutoNewLineLayout
                android:layout_marginTop="4dp"
                android:id="@+id/anl_edit_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:horizontalSpace="6dp"
                app:vertivalSpace="8dp"
                />
            <TextView
                android:layout_marginTop="16dp"
                android:textColor="#FF7F7F7F"
                android:textSize="12sp"
                android:text="色彩"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <LinearLayout
                android:padding="0.5dp"
                android:background="@drawable/sp_line"
                android:elevation="@dimen/dp_4"
                android:id="@+id/ll_edit_colors"
                android:layout_marginTop="4dp"
                android:layout_height="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
            </LinearLayout>
        </LinearLayout>
    <include layout="@layout/layout_progressbar"/>
</RelativeLayout>
