<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:background="@color/color_white5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/action_cancel"
            android:textColor="@color/color_black38"
            android:textSize="@dimen/medium_text_size1" />

        <TextView
            android:id="@+id/pop_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/action_ok"
            android:textColor="@color/color_black87"
            android:textSize="@dimen/medium_text_size1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="15dp">
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0.5"
            />
        <com.d2cmall.buyer.widget.loopview.LoopView
            android:id="@+id/id_type_first"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@color/transparent"
            app:awv_textsize="16"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_centerTextColor="@color/color_black2"
            app:awv_outerTextColor="@color/color_black4"/>

        <com.d2cmall.buyer.widget.loopview.LoopView
            android:id="@+id/id_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:background="@color/transparent"
            app:awv_textsize="16"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_centerTextColor="@color/color_black2"
            app:awv_outerTextColor="@color/color_black4" />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0.5"
            />
    </LinearLayout>
</LinearLayout>