<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/product_iv"
            android:layout_width="67dp"
            android:layout_height="100dp"
            android:scaleType="centerInside"
            android:layout_marginRight="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/product_iv">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black87"
                    android:textSize="@dimen/medium_text_size1"
                    android:layout_marginRight="8dp"/>
                <TextView
                    android:id="@+id/product_drop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/product_price"
                    android:layout_alignBottom="@id/product_price"
                    android:textSize="@dimen/small_text_size"
                    android:textColor="@color/color_black38"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/select_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textColor="@color/color_black60"
                android:text="请选择尺码"
                android:textSize="@dimen/medium_text_size3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/select_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择颜色"
                    android:textColor="@color/color_black60"
                    android:textSize="@dimen/medium_text_size3"/>

                <TextView
                    android:id="@+id/surplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/color_red"
                    android:textSize="14dp"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_order_close"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size3"
                android:textColor="@color/color_black87"
                android:text="颜色"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"/>

            <com.d2cmall.buyer.widget.flowLayout.TagFlowLayout
                android:id="@+id/color_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/color_tv"/>

            <TextView
                android:id="@+id/size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size3"
                android:textColor="@color/color_black87"
                android:text="尺码"
                android:layout_marginBottom="16dp"
                android:layout_below="@id/color_layout"/>

            <com.d2cmall.buyer.widget.flowLayout.TagFlowLayout
                android:id="@+id/size_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/size_tv"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/sp_rotate_progressbar_style"
                android:indeterminateDuration="600"
                android:interpolator="@android:anim/accelerate_decelerate_interpolator"
                android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_alignTop="@id/size_tv"
                tools:visibility="gone" />

            <TextView
                android:id="@+id/num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textColor="@color/color_black87"
                android:textSize="@dimen/medium_text_size3"
                android:layout_below="@id/size_layout"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:id="@+id/num_ll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:layout_below="@id/num_tv"
                android:layout_marginBottom="32dp"
                >
                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_shopcart_minus"/>
                <TextView
                    android:id="@+id/cart_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/icon_shopcart_boader"
                    android:gravity="center"
                    android:text="1"
                    />
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_shopcart_add"/>
            </LinearLayout>
            <TextView
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/num_ll"
                android:maxLength="40"
                android:layout_marginBottom="32dp"
                android:textSize="@dimen/small_text_size"
                android:textColor="#F23365"
                android:ellipsize="end"/>
        </RelativeLayout>
    </ScrollView>
    <TextView
        android:id="@+id/sure_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:background="@color/color_black_bg"
        android:textSize="18dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:text="确定"/>
    <LinearLayout
        android:id="@+id/sure_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/add_cart_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@mipmap/button_addshopcart"
            android:textSize="18dp"
            android:text="加入购物车"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/buy_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="立即购买"
            android:gravity="center"
            android:background="@mipmap/button_buynow"
            android:textColor="@color/color_orange"
            android:textSize="18dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>
</LinearLayout>