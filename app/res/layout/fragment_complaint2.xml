<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_question_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/question_type"
            android:textColor="#8A000000"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:id="@+id/rl_send_slow"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_rl_send_slow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_unselect"
                    android:gravity="center"
                    android:text="@string/send_slow"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_rl_send_slow_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_all_chosenmark"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_product_quality"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_product_quality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_unselect"
                    android:gravity="center"
                    android:text="@string/product_quality"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_product_quality_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_all_chosenmark"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_people_attitude"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_people_attitude"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_unselect"
                    android:gravity="center"
                    android:text="@string/people_attitude"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_people_attitude_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_all_chosenmark"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="12dp">

            <RelativeLayout
                android:id="@+id/rl_price"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_unselect"
                    android:gravity="center"
                    android:text="@string/question_price"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_price_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_all_chosenmark"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_other"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:layout_marginLeft="16dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_other"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_unselect"
                    android:gravity="center"
                    android:text="@string/question_other"
                    android:textColor="#8A000000"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_other_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/icon_all_chosenmark"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <EditText
            android:id="@+id/edit_description"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@null"
            android:gravity="left|top"
            android:hint="@string/hint_question_other"
            android:lines="3"
            android:maxLength="500"
            android:scrollbars="vertical"
            android:textColor="#DE000000"
            android:textColorHint="#61000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="0/500"
            android:textColor="#61000000"
            android:textSize="11sp" />

        <RelativeLayout
            android:id="@+id/images_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <com.d2cmall.buyer.widget.MyGridView
                android:id="@+id/gridView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:horizontalSpacing="8dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:verticalSpacing="0dp" />

            <RelativeLayout
                android:id="@+id/empty_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:paddingBottom="4dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/add_btn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_releshow_addpic" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_image_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:text="(0/3)"
                android:textColor="#61000000"
                android:textSize="11sp" />

            <View xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/line_layout"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/line" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:textColorHint="#8A000000">

            <com.d2cmall.buyer.widget.ClearEditText
                android:id="@+id/edit_man_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="手机号"
                android:inputType="number"
                android:textColor="#DE000000"
                android:textColorHint="#8A000000"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:background="#61232427"
                android:gravity="center"
                android:text="提交"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>