<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_root_view"
    android:background="@color/bg_color"
    tools:mContext="com.d2cmall.buyer.activity.ReshipDetailActivity">
        <include layout="@layout/layout_default_title" />

        <ScrollView
            android:id="@+id/sv_root"
            android:layout_below="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RelativeLayout
                    android:gravity="center"
                    android:background="#5B606F"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >
                <com.d2cmall.buyer.widget.TimeLineView
                    android:id="@+id/timeLineView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="20dp"
                    app:textSize="12sp"
                    />
                </RelativeLayout>

                <LinearLayout
                    android:background="@color/color_white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:id="@+id/ll_after_sale_state"
                    >
                    <ImageView
                        android:id="@+id/iv_status"
                        android:src="@mipmap/icon_service_time"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/tv_status_name"
                        android:ellipsize="end"
                        tools:text="退货申请提交成功,请耐心等待"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:lines="1"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_left_time"
                        android:textColor="@color/color_red"
                        android:paddingRight="16dp"
                        android:layout_weight="1"
                        tools:text="还剩5天"
                        android:gravity="center_vertical|right"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>
                <include layout="@layout/line_margin_left" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_logistics_info"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/bg_gray_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/tv_logistics_info"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        tools:text="请尽快提交物流信息,没有物流信息会影响退回进度"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_logistics_address"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/bg_gray_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/tv_logistics_address"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        tools:text="请尽快提交物流信息,没有物流信息会影响退回进度"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:background="@color/color_white"
                    android:id="@+id/rl_company_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/iv_icon_logistics"
                        android:layout_marginTop="32dp"
                        android:src="@mipmap/icon_service_address"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_marginLeft="8dp"
                        android:id="@+id/tv_back_title"
                        android:textSize="12sp"
                        android:text="退货寄回信息"
                        android:textColor="@color/color_black87"
                        android:layout_marginTop="16dp"
                        android:layout_toRightOf="@+id/iv_icon_logistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:paddingRight="16dp"
                        android:id="@+id/tv_back_address"
                        android:layout_marginLeft="8dp"
                        android:layout_below="@+id/tv_back_title"
                        android:textSize="12sp"
                        tools:text="退货地址:浙江省杭州市西湖区莲花峰路12号D2C;收件人D2C销退组;电话:4008403666"
                        android:textColor="@color/color_black60"
                        android:layout_marginTop="12dp"
                        android:layout_toRightOf="@+id/iv_icon_logistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_marginBottom="4dp"
                        android:id="@+id/tv_action_copy"
                        android:layout_marginRight="16dp"
                        android:layout_below="@+id/tv_back_address"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="复制"
                        android:background="@drawable/sp_line"
                        android:layout_height="20dp"
                        android:layout_width="48dp"
                        />
                    <View
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="16dp"
                        android:layout_height="0.5dp"
                        android:background="@color/line" />
                </RelativeLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_custerm_msg"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/iv_custerm_dot"
                        android:src="@drawable/bg_gray_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        tools:text="物流信息:请前往D2C官方地址,自行领取"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_custerm_msg"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_logistics_alert"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/bg_gray_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:text="请尽快提交物流信息,没有物流信息会影响退回进度"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/ll_tip_write_logistic"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/bg_gray_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/tv_tip_write_logistics_info"
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:text="如逾期未填写退货物流信息,退货申请将自动关闭"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:background="@color/color_white"
                    android:id="@+id/rl_cancle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    >
                    <TextView
                        android:visibility="gone"
                        android:textColor="@color/color_white"
                        android:layout_toLeftOf="@+id/tv_action_cancle"
                        android:layout_marginRight="8dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="填写物流信息"
                        android:background="#232427"
                        android:id="@+id/tv_change_logist"
                        android:layout_width="96dp"
                        android:layout_height="32dp"
                        />
                    <TextView
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:text="取消申请"
                        android:background="@drawable/sp_line"
                        android:id="@+id/tv_action_cancle"
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/img_product"
                        android:layout_width="48dp"
                        android:layout_height="72dp"
                        android:layout_marginRight="16dp"
                        android:background="@color/color_white2"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_product_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:ellipsize="end"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="2"
                            android:textColor="#DE000000"
                            android:textSize="14sp"
                            tools:text="这是商品名称" />

                        <TextView
                            android:id="@+id/tv_product_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@+id/tv_product_title"
                            android:layout_marginTop="14dp"
                            android:gravity="bottom"
                            android:lines="1"
                            android:textColor="#8A000000"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </LinearLayout>
                <include layout="@layout/line_margin_left" />
                <LinearLayout
                    android:background="@color/color_white"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_product_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:lines="1"
                        android:textColor="@color/color_black87"
                        android:text="退货件数"
                        android:id="@+id/tv_num_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:lines="1"
                        android:gravity="end"
                        android:textColor="@color/color_black87"
                        tools:text="3件"
                        android:id="@+id/tv_num"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/color_white"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_product_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:lines="1"
                        android:textColor="@color/color_black87"
                        android:text="申请金额"
                        android:id="@+id/tv_money_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:lines="1"
                        android:gravity="end"
                        android:textColor="@color/color_black87"
                        tools:text="3件"
                        android:id="@+id/tv_money"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/color_white"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_product_ratify_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:lines="1"
                        android:textColor="@color/color_black87"
                        android:text="核定金额"
                        android:id="@+id/tv_money_ratify_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:lines="1"
                        android:gravity="end"
                        android:textColor="@color/color_black87"
                        android:id="@+id/tv_money_ratify"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/color_white"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_back_money_way"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:text="退款方式"
                        android:lines="1"
                        android:textColor="@color/color_black87"
                        android:id="@+id/tv_back_money_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:lines="1"
                        android:gravity="end"
                        android:textColor="@color/color_black87"
                        android:text="原路返回"
                        android:id="@+id/tv_back_way"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
                <LinearLayout
                    android:background="@color/color_white"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_back_code_desc"
                            tools:text="退货编号:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:lines="1"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/tv_back_code"
                            tools:text="R1454687651"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_back_reason_desc"
                            tools:text="退货原因:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:lines="1"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/tv_back_reason"
                            tools:text="七天无理由"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_request_time_desc"
                            android:text="申请时间:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:lines="1"
                            android:layout_marginLeft="4dp"
                            android:id="@+id/tv_request_time"
                            tools:text="2017/10/10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_user_memo"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:text="问题描述:"
                            android:id="@+id/tv_question_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:id="@+id/tv_question"
                            tools:text="懒得换了,还是退了吧"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_evidences"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_img_desc"
                            android:text="凭证图片:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>
                    </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/progress_detail"
                    android:background="@color/color_white"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    >
                    <TextView
                        android:paddingLeft="16dp"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="进度详情"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/ic_shop_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    <include layout="@layout/list_empty_view"/>
    <include layout="@layout/layout_progressbar"/>
</RelativeLayout>
