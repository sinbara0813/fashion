<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    >
    <ImageView
        android:scaleType="centerInside"
        android:id="@+id/iv_product"
        android:layout_width="96dp"
        android:layout_height="144dp"
        tools:src="@mipmap/ic_logo_empty5"
        />
    <TextView
        style="@style/boldTextStyle"
        android:id="@+id/tv_product_name"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/iv_product"
        android:textColor="@color/color_black85"
        android:lines="2"
        android:ellipsize="end"
        tools:text="这是商品名字"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_product_name"
        android:id="@+id/tv_sub_title"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/iv_product"
        android:textColor="@color/trans_50_color_black"
        android:lines="1"
        android:ellipsize="end"
        tools:text="这是商品名字"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/tv_old_price"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/iv_product"
        android:textColor="@color/color_black85"
        android:lines="1"
        android:ellipsize="end"
        tools:text="原价:¥1000"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_collage_price"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/iv_product"
        android:textColor="@color/color_black85"
        android:lines="1"
        android:ellipsize="end"
        tools:text="5人团:¥599"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        />
    <TextView
        android:gravity="center"
        android:background="@color/color_red"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_to_collage"
        android:textSize="12sp"
        android:textColor="@color/color_white"
        android:lines="1"
        android:ellipsize="end"
        tools:text="去拼团"
        android:layout_marginLeft="8dp"
        android:layout_height="24dp"
        android:layout_width="56dp"
        />
</RelativeLayout>