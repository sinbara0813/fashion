<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/module_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white">

    <LinearLayout
        android:id="@+id/inner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_name"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#8A000000"
            android:textSize="12sp"
            tools:text="@string/label_coupon" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_alignTop="@+id/inner_layout"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="-4dp"
        android:layout_toRightOf="@+id/inner_layout"
        android:background="@drawable/sp_round7_red"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minWidth="14dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/tiny_text_size"
        android:visibility="gone"
        tools:text="9" />

</RelativeLayout>