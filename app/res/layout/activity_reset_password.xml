<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@mipmap/pic_loginbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tab_all_back_b"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="重设密码"
            style="@style/boldTextStyle"
            />

        <TextView
            android:id="@+id/title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="right"
            android:textSize="@dimen/medium_text_size1"
            android:textColor="@color/trans_87_color_black"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <View
            android:id="@+id/account_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/tv_nation_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dp"
            android:textColor="#FF000000"
            android:gravity="center"
            android:drawableEnd="@mipmap/icon_login_down_b"
            android:text="+86"
            android:visibility="visible"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_login_delete_b"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />

        <com.d2cmall.buyer.widget.ClearEditText
            android:id="@+id/et_bind_phone_number"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@null"
            app:del="@mipmap/icon_login_delete_b"
            android:gravity="center_vertical"
            android:hint="手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/color_black_bg1"
            android:textColorHint="#B2B2B2"
            android:textSize="16sp"
            android:layout_toEndOf="@id/tv_nation_code"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_security_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:visibility="visible">
        <View
            android:id="@+id/security_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>
        <com.d2cmall.buyer.widget.ClearEditText
            android:id="@+id/et_bind_security_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/label_code"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/color_black_bg1"
            android:textColorHint="#B2B2B2"
            android:textSize="16sp"
            app:del="@mipmap/icon_login_delete_b"
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/register_security_tv"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@drawable/border_black"
            android:textColor="@color/color_black87"
            android:textSize="@dimen/small_text_size"
            android:text="@string/label_msg_code"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:visibility="visible">

        <View
            android:id="@+id/password_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:layout_alignParentBottom="true"/>


        <ImageView
            android:id="@+id/password_see"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_above="@id/password_line"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/icon_login_eyeclose"/>

        <com.d2cmall.buyer.widget.ClearEditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/password_see"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="新密码(8-20位字符)"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/color_black_bg1"
            android:textColorHint="#B2B2B2"
            android:textSize="16sp"
            app:del="@mipmap/icon_login_delete_b"
            android:layout_alignTop="@+id/password_see"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_tip"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_alignParentRight="true"
        android:textColor="#c8c8c8"
        android:textSize="@dimen/small_text_size"
        android:text="@string/label_password_tip1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_get_voice"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:text="@string/label_try_code"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:textColor="@color/color_black_bg1"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/iv_finish"
        android:text="完成"
        android:textSize="18sp"
        android:background="#FFDDDDDD"
        android:textColor="#ffffff"
        android:enabled="false"
        android:layout_marginTop="48dp"
        android:layout_width="280dp"
        android:layout_height="40dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_regagreement"
        android:gravity="bottom|center_horizontal"
        android:text="点击注册代表您已阅读并同意《用户协议》"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:paddingBottom="16dp"
        android:layout_height="0dp"
        android:textSize="12sp"
        android:textColor="@color/color_black_bg1"
        />
</LinearLayout>