<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/line"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择时间"
            android:textColor="@color/color_black2"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textSize="@dimen/medium_text_size3" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_new_close_g"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <include layout="@layout/line_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/color_white">

        <com.d2cmall.buyer.widget.loopview.LoopView
            android:id="@+id/select_month"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:background="@color/transparent"
            app:awv_textsize="16"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_centerTextColor="@color/color_black2"
            app:awv_outerTextColor="@color/color_black4"/>

        <com.d2cmall.buyer.widget.loopview.LoopView
            android:id="@+id/select_day"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:background="@color/transparent"
            app:awv_textsize="16"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_centerTextColor="@color/color_black2"
            app:awv_outerTextColor="@color/color_black4"/>

        <com.d2cmall.buyer.widget.loopview.LoopView
            android:id="@+id/select_hour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:background="@color/transparent"
            app:awv_textsize="16"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_centerTextColor="@color/color_black2"
            app:awv_outerTextColor="@color/color_black4"/>

        <com.d2cmall.buyer.widget.loopview.LoopView
            android:id="@+id/select_minute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="130dp"
            android:background="@color/transparent"
            app:awv_textsize="16"
            app:awv_isLoop="false"
            app:awv_itemsVisibleCount="7"
            app:awv_centerTextColor="@color/color_black2"
            app:awv_outerTextColor="@color/color_black4"/>
    </LinearLayout>

</LinearLayout>