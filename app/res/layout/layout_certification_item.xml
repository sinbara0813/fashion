<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="16dp"
    >
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/ll_top"
        android:padding="16dp"
        android:background="@drawable/sp_roundtop4_white"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        >
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textColor="@color/color_black85"
            android:textSize="18sp"
            tools:text="华晨宇"
            />
        <TextView
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_id_number"
            android:textColor="@color/color_black85"
            android:textSize="18sp"
            tools:text="身份证 411*************1102"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/sp_roundbottom4_white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        >
        <com.d2cmall.buyer.widget.CheckBox
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/check_box"
            />
        <TextView
            android:textColor="#686F71"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="账号默认实名人"
            />
        <ImageView
            android:src="@mipmap/icon_delete"
            android:id="@+id/iv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_add_certification"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="18sp"
        android:text="添加实名信息"
        android:layout_marginTop="16dp"
        android:background="@color/color_black_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        />
</LinearLayout>