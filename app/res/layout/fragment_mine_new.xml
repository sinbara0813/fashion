<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FF1C1D1D"
    android:layout_height="match_parent">


    <com.d2cmall.buyer.widget.PtrStoreHouseFrameLayout
        android:id="@+id/ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
          android:background="@color/color_white"
          android:id="@+id/recycler_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />
    </com.d2cmall.buyer.widget.PtrStoreHouseFrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:gravity="bottom"
        android:id="@+id/ll_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-40dp"
        android:layout_marginRight="16dp"
        android:elevation="5dp"
        android:orientation="vertical">

        <ImageView
            android:visibility="invisible"
            android:id="@+id/iv_footmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:src="@mipmap/icon_xiangqing_zuji" />

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="visible"
            android:src="@mipmap/icon_xiangqing_dingbu" />
    </LinearLayout>
    <RelativeLayout
        android:alpha="0"
        android:background="#FF1C1D1D"
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:clickable="true"
        >

        <RelativeLayout
            android:layout_width="44dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_mine_setting" />

            <TextView
                android:id="@+id/tv_red_point"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/sp_round7_red"
                android:visibility="visible" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:maxLength="10"
            android:ellipsize="end"
            android:gravity="center"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_mine_shoppingcart" />

    </RelativeLayout>
</RelativeLayout>