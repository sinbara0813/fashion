<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_more_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="#8A000000"
        android:drawablePadding="2dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:drawableRight="@mipmap/icon_mine_right"/>
    <LinearLayout
        android:id="@+id/ll_three"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_one"
            android:layout_width="104dp"
            android:layout_marginRight="8dp"
            android:layout_height="104dp">
            <ImageView
                android:id="@+id/iv_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_status_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_title_one"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/back_live_text"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_two"
            android:layout_width="104dp"
            android:layout_marginRight="8dp"
            android:layout_height="104dp">
            <ImageView
                android:id="@+id/iv_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_status_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_title_two"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:background="@drawable/back_live_text"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_three"
            android:layout_width="104dp"
            android:layout_height="104dp">
            <ImageView
                android:id="@+id/iv_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/tv_status_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_title_three"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:background="@drawable/back_live_text"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_single_boss"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_single_live"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_single"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:visibility="gone"
                android:src="@mipmap/icon_boardcast_mark"/>
            <TextView
                android:id="@+id/tv_status_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_num_look"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp"
                android:shadowColor="#80000000"
                android:shadowDy="1"
                android:shadowDx="0"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_describe"
            android:textColor="#DE000000"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="564545413143545"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:id="@+id/bg_rl"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans_60_color_white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_forecast_tittle"/>
        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_avatar"
            android:textColor="@color/color_black87"
            android:textSize="@dimen/ex_large_text_size"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/name"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:lines="2"/>
        <LinearLayout
            android:layout_width="176dp"
            android:layout_height="32dp"
            android:background="@drawable/sp_live_bg"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_black60"
                android:textSize="@dimen/medium_text_size3"/>
            <TextView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:textSize="@dimen/medium_text_size3"
                android:textColor="@color/color_white"
                android:text="即将开始"
                android:gravity="center"
                android:background="@color/color_black_bg"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

</LinearLayout>