<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp">

    <com.d2cmall.buyer.widget.ProcessImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white2"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_default_pic" />


    <ImageView
        android:id="@+id/add_btn"
        android:layout_width="match_parent"
        android:src="@mipmap/icon_addpic"
        android:background="#eeeeee"
        android:contentDescription="@string/app_name"
        android:visibility="gone"
        android:scaleType="centerInside"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_showplay" />
    <ImageButton
        android:id="@+id/delete"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:contentDescription="@string/app_name"
        android:layout_alignParentRight="true"
        android:padding="2dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_image_remove" />


</RelativeLayout>