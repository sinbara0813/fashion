<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">

        <com.d2cmall.buyer.widget.RoundLayout
            android:visibility="gone"
            android:elevation="2dp"
            app:radius="4dp"
            android:background="@drawable/sp_roundtop4_white"
            android:id="@+id/rl_weather"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >
            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:paddingLeft="40dp"
                android:textColor="@color/color_white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_weather"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/icon_mywear_advise" />

                <com.d2cmall.buyer.widget.MarqueeTextView
                    android:id="@+id/tv_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="8dp"
                    android:paddingRight="10dp"
                    android:singleLine="true"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>

        </com.d2cmall.buyer.widget.RoundLayout>

        <ImageView
            android:layout_marginTop="16dp"
            android:layout_width="174dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/pic_recommendtitle" />
</LinearLayout>