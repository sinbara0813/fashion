<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_type"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginTop="32dp"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="商品类型"
        android:textSize="18sp"
        android:textColor="#DE000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <RelativeLayout
            android:id="@+id/rl_spot"
            android:layout_width="72dp"
            android:visibility="gone"
            android:layout_height="32dp">
            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#8A000000"
                android:background="@drawable/border_unselect"
                android:textSize="12sp"
                android:text="现货"/>
            <ImageView
                android:id="@+id/iv_cash_mark"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@mipmap/icon_all_chosenmark"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="72dp"
            android:id="@+id/rl_presell"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_height="32dp">
            <TextView
                android:id="@+id/tv_pre_sell"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#8A000000"
                android:background="@drawable/border_unselect"
                android:textSize="12sp"
                android:text="预售"/>
            <ImageView
                android:id="@+id/iv_pre_sell_mark"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@mipmap/icon_all_chosenmark"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="72dp"
            android:id="@+id/rl_custom"
            android:visibility="gone"
            android:layout_marginStart="16dp"
            android:layout_height="32dp">
            <TextView
                android:id="@+id/tv_made"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#8A000000"
                android:background="@drawable/border_unselect"
                android:textSize="12sp"
                android:text="定制"/>
            <ImageView
                android:id="@+id/iv_made_mark"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:src="@mipmap/icon_all_chosenmark"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>