<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/trans_40_color_black"
    android:layout_height="match_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_hand"
            android:layout_below="@+id/ll_pop"
            android:src="@mipmap/pic_buyercenter_pulldown"
            android:layout_width="100dp"
            android:layout_height="140dp"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="330dp"
            android:text="下拉页面即可切换至个人中心"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            />
        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_dismiss"
            android:gravity="center"
            android:layout_marginTop="410dp"
            android:text="我知道了"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:background="@drawable/stroke_round35_white"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            />

</RelativeLayout>