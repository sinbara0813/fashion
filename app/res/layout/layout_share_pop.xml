<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sp_round8_white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="15dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/medium_text_size3"
            android:textColor="@color/color_black50"
            android:text="分享到"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/share_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/delete_ll"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/ll_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textSize="@dimen/medium_text_size3"
                android:textColor="@color/color_black50"
                android:text="下载"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/icon_share_download"/>

            <TextView
                android:id="@+id/ll_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:text="删除"
                android:gravity="center_vertical"
                android:textSize="@dimen/medium_text_size3"
                android:textColor="@color/color_black50"
                android:paddingLeft="107dp"
                android:drawableLeft="@mipmap/icon_share_delete"/>

        </LinearLayout>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:textColor="@color/color_black"
        android:textSize="@dimen/large_text_size"
        android:text="取消"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/sp_round8_white"/>
    
</LinearLayout>