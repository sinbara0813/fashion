<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="horizontal"
    android:background="@color/color_white"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:paddingRight="16dp"
        android:layout_below="@+id/tv_title"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="112dp"
        >
        <TextView
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="优惠券 199-30"
            android:id="@+id/tv_title"
            android:paddingRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/color_black85"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/tv_price"
                android:ellipsize="end"
                android:lines="1"
                tools:text="60D币"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:textColor="#C39B5C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/tv_conversion_code"
                android:ellipsize="end"
                android:lines="1"
                tools:text="兑换码: QQASDS5"
                android:paddingRight="16dp"
                android:textSize="16sp"
                android:textColor="#C39B5C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <TextView
            android:gravity="bottom"
            android:layout_weight="1"
            android:id="@+id/tv_date"
            android:ellipsize="end"
            android:lines="1"
            tools:text="2018-05-06"
            android:textSize="12sp"
            android:textColor="@color/trans_50_color_black"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            />
    </LinearLayout>
<ImageView
    android:layout_gravity="center_vertical"
    tools:src="@mipmap/ic_logo_empty5"
    android:scaleType="centerCrop"
    android:id="@+id/image"
    android:layout_width="90dp"
    android:layout_height="90dp"
    />


</LinearLayout>