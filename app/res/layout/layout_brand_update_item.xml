<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:paddingTop="8dp"
    android:paddingBottom="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="8dp"/>

        <LinearLayout
            android:id="@+id/name_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/img_avatar">
            <TextView
                android:id="@id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/large_text_size"
                android:textColor="@color/color_black87"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/medium_text_size3"
                android:textColor="@color/color_black60"/>
        </LinearLayout>
        //开启消息推送行为节点
        <com.d2cmall.buyer.widget.ShowPopImageView
            android:id="@+id/focus_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/button_fashion_care"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingLeft="56dp"
        android:paddingTop="16dp"
        >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="88dp"
            android:layout_height="132dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="8dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black87"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="4dp"
            android:layout_below="@id/image1"
            android:layout_alignLeft="@id/image1"
            android:layout_alignRight="@id/image1"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_width="88dp"
            android:layout_height="132dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/image1"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black87"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="4dp"
            android:layout_below="@id/image2"
            android:layout_alignLeft="@id/image2"
            android:layout_alignRight="@id/image2"
            android:gravity="center_horizontal"/>
        <ImageView
            android:id="@+id/image3"
            android:layout_width="88dp"
            android:layout_height="132dp"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:layout_toRightOf="@id/image2"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black87"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="4dp"
            android:layout_below="@id/image3"
            android:layout_alignLeft="@id/image3"
            android:layout_alignRight="@id/image3"
            android:gravity="center_horizontal"/>
    </RelativeLayout>
</LinearLayout>