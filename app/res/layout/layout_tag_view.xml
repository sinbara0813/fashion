<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/trag_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:contentDescription="@null"
        android:paddingTop="5dp"
        android:src="@mipmap/ic_tabel_circle" />

    <TextView
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/trag_iv"
        android:background="@drawable/sp_round4_white"
        android:padding="10dp"
        tools:text="张帅他妹的衣服"
        />

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-8dp"
        android:layout_marginLeft="-13dp"
        android:padding="5dp"
        android:layout_toRightOf="@id/info_tv"
        android:src="@mipmap/ic_tabel_close"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/add_cart_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/info_tv"
        android:layout_below="@id/info_tv"
        android:layout_marginTop="10dp"
        android:background="@drawable/sp_round4_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_round4_white"
            android:text="￥100000"
            android:textColor="@color/color_red" />

        <ImageView
            android:id="@+id/cart_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_tabel_cart" />
    </LinearLayout>
</RelativeLayout>