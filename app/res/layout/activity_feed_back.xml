<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:onClick="hideKeyboard"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_default_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#8A000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.d2cmall.buyer.widget.ClearEditText
                android:id="@+id/tv_your_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="您的姓名"
                android:textColor="#DE000000"
                android:background="@null"
                android:textColorHint="#8A000000"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <include layout="@layout/line_margin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#8A000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.d2cmall.buyer.widget.ClearEditText
                android:id="@+id/tv_your_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="您的电话"
                android:textColor="#DE000000"
                android:background="@null"
                android:textColorHint="#8A000000"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <include layout="@layout/line_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#8A000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.d2cmall.buyer.widget.ClearEditText
                android:id="@+id/tv_your_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="您的邮箱(非必填)"
                android:textColor="#DE000000"
                android:background="@null"
                android:textColorHint="#8A000000"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <include layout="@layout/line_margin" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_white">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textColorHint="#8A000000"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">
            <com.d2cmall.buyer.widget.ClearEditText
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="反馈内容"
                android:textColor="#DE000000"
                android:background="@null"
                android:textColorHint="#8A000000"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <include layout="@layout/line_layout" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />
    <Button
        android:layout_marginBottom="32dp"
        android:id="@+id/btn_commit"
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:background="#FFDDDDDD"
        android:text="提交"
        android:textSize="18sp"
        android:textColor="#FFFFFFFF"
        />
</LinearLayout>