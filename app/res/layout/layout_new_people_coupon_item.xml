<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@mipmap/bg_youhuiquan"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <TextView
        android:textSize="24sp"
        tools:text="¥100"
        android:textColor="#9F6302"
        android:id="@+id/tv_coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:layout_below="@+id/tv_coupon_amount"
        android:textSize="10sp"
        tools:text="满3699使用"
        android:textColor="#669F6302"
        android:id="@+id/tv_coupon_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_coupon_type"
        android:layout_marginLeft="80dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:text="新人有礼优惠券"
        android:textColor="#714003"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>