<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">
    <include layout="@layout/layout_main_item_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_type7_item_pic"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_type7_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="#DE000000"
            android:textStyle="bold"
            android:layout_marginTop="-3dp"
            android:lineSpacingExtra="8dp"
            android:textSize="20sp"
            android:visibility="gone"
            android:background="@color/color_white"
            android:layout_below="@id/img_type7_item_pic"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_type7_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:lineSpacingExtra="3dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="-2dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:textColor="#8A000000"
        android:visibility="gone"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/type7_item_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_type7_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/color_red"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/tv_type7_item_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:textColor="@color/color_black4"
            android:textSize="@dimen/medium_text_size1" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_type7_item"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

</LinearLayout>