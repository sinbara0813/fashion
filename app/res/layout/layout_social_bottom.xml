<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:id="@+id/video_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:src="@mipmap/icon_publish_video"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size3"
            android:textColor="@color/color_black87"
            android:text="短视频"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pic_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:src="@mipmap/icon_publish_picture"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size3"
            android:textColor="@color/color_black87"
            android:text="图文"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/live_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:layout_alignParentRight="true"
        android:layout_marginRight="48dp"
        android:layout_marginTop="45dp">
        <ImageView
            android:id="@+id/live_pic"
            android:layout_width="62dp"
            android:layout_height="59dp"
            android:src="@mipmap/icon_publish_boardcast"
            android:layout_marginBottom="4dp"
            android:scaleType="fitCenter"/>
        <TextView
            android:id="@+id/live_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_text_size3"
            android:textColor="@color/color_black87"
            android:text="直播"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pic_ll"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon_windows_close"/>
</RelativeLayout>