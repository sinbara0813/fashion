<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.d2cmall.buyer.widget.RoundLayout
        android:visibility="gone"
        app:radius="6dp"
        android:background="@drawable/sp_roundtop4_white"
        android:id="@+id/rl_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <com.d2cmall.buyer.widget.nicevideo.NiceVideoPlayer
            android:visibility="gone"
            android:id="@id/nice_video_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.d2cmall.buyer.widget.RoundLayout>

    <com.d2cmall.buyer.widget.RoundedImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:corner_radius="6dp"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#262626"
        />
</LinearLayout>